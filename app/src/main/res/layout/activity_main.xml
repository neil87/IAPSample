<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/img_my_coin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_coin"
            app:layout_constraintEnd_toStartOf="@+id/text_my_coin"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_my_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_my_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_my_coin"
            app:layout_constraintTop_toTopOf="@+id/img_my_coin" />

        <!-- 500 -->
        <View
            android:id="@+id/img_coin_500"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_coin"
            app:layout_constraintEnd_toStartOf="@+id/img_coin_1200"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_my_coin" />

        <TextView
            android:id="@+id/text_coin_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_500"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_500"
            app:layout_constraintStart_toStartOf="@+id/img_coin_500"
            app:layout_constraintTop_toBottomOf="@+id/img_coin_500" />

        <Button
            android:id="@+id/button_coin_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:text="5,000원"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_500"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/img_coin_500"
            app:layout_constraintTop_toBottomOf="@+id/text_coin_500" />

        <!-- 1200 -->
        <View
            android:id="@+id/img_coin_1200"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_coin"
            app:layout_constraintEnd_toStartOf="@+id/img_coin_2500"
            app:layout_constraintStart_toEndOf="@+id/img_coin_500"
            app:layout_constraintTop_toBottomOf="@+id/img_my_coin" />

        <TextView
            android:id="@+id/text_coin_1200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_1200"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_1200"
            app:layout_constraintStart_toStartOf="@+id/img_coin_1200"
            app:layout_constraintTop_toBottomOf="@+id/img_coin_1200" />

        <Button
            android:id="@+id/button_coin_1200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:text="9,900원"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_1200"
            app:layout_constraintStart_toStartOf="@+id/img_coin_1200"
            app:layout_constraintTop_toBottomOf="@+id/text_coin_1200" />

        <!-- 2500 -->
        <View
            android:id="@+id/img_coin_2500"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_coin_1200"
            app:layout_constraintTop_toBottomOf="@+id/img_my_coin" />

        <TextView
            android:id="@+id/text_coin_2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_2500"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_2500"
            app:layout_constraintStart_toStartOf="@+id/img_coin_2500"
            app:layout_constraintTop_toBottomOf="@+id/img_coin_2500" />

        <Button
            android:id="@+id/button_coin_2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:text="19,800원"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/img_coin_2500"
            app:layout_constraintStart_toStartOf="@+id/img_coin_2500"
            app:layout_constraintTop_toBottomOf="@+id/text_coin_2500" />

    </android.support.constraint.ConstraintLayout>

</layout>