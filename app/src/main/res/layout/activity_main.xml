<?xml version="1.0" encoding="utf-8"?>

<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/img_my_coin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_coin"
            app:layout_constraintEnd_toStartOf="@+id/text_my_coin"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_my_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_my_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_my_coin"
            app:layout_constraintTop_toTopOf="@+id/img_my_coin" />

    </android.support.constraint.ConstraintLayout>

</layout>